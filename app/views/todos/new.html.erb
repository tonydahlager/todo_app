<h1>New Todo</h1>
<table>
	<%= form_for @todo do |t| %>

			<tr>
				<td><%= t.label :title %></td>
				<td><%= t.text_field :title %></td>
			</tr>

			<tr>
				<td><%= t.label :description %></td>
				<td><%= t.text_area :description %></td>
			</tr>

			<tr>
				<td><%= t.label :completed %></td>
				<td>
					<%= t.select(:completed, options_for_select([['Yes', true], ['No', false]], false)) %>

				</td>

			</tr>
		<%= t.submit %>
	<% end %>
</table>
